import os
import sys


def _define(autoconf=None, envvar=None, setenv=False, default=None):
    '''
    define an overridable constant
    * Better defaults
    * Save as userprefs
    * No compile-time defines
    '''
    value = default
    if autoconf and not (autoconf.startswith('@') and autoconf.endswith('@')):
        value = autoconf
    if envvar:
        val = os.getenv(envvar)
        if val:
            value = val
            if setenv:
                os.environ[envvar] = val
    return value

DATADIR = _define(autoconf="@datadir@", default='/usr/share')
PACKAGE = os.path.basename(os.path.dirname(sys.modules[__name__].__file__))
CRM_CACHE_DIR = _define(autoconf="@CRM_CACHE_DIR@", default='/var/cache/crm')
CRM_CONFIG_DIR = _define(autoconf="@CRM_CONFIG_DIR@")
CRM_DAEMON_DIR = _define(autoconf="@CRM_DAEMON_DIR@")
CRM_DAEMON_USER = _define(autoconf="@CRM_DAEMON_USER@", default="hacluster")
VERSION = _define(autoconf="@VERSION@", default="dev")
BUILD_VERSION = _define(autoconf="@BUILD_VERSION@", default="dev")
OCF_ROOT_DIR = _define(autoconf="@OCF_ROOT_DIR@", default="/usr/lib/ocf")
CRM_SCHEMA_DIR = _define(autoconf="@CRM_DTD_DIRECTORY@")
PE_STATE_DIR = _define(default='/var/lib/pacemaker/pengine')
CRM_CONFIG_DIR = _define(default='/var/lib/pacemaker/cib')
CRM_DAEMON_DIR = _define(autoconf="@CRM_DAEMON_DIR@",
                         envvar="CRM_DAEMON_DIR",
                         default='/usr/lib64/pacemaker')
CRM_DAEMON_USER = _define(autoconf="@CRM_DAEMON_USER@",
                          envvar="CRM_DAEMON_USER",
                          default='hacluster')
HA_VARLIBHBDIR = _define(autoconf="@HA_VARLIBHBDIR@", default='/var/lib/heartbeat')
CRM_SHARE_DIR = _define(default=os.path.join(DATADIR, PACKAGE))
REPORT_CACHE_DIR = os.path.join(CRM_CACHE_DIR, 'history')
TEMPLATES_DIR = os.path.join(CRM_SHARE_DIR, 'templates')
HELP_TEXT_FILE = os.path.join(CRM_SHARE_DIR, 'crm.8.txt')
HB_DELNODE_EXEC = _define(default=os.path.join(DATADIR, 'heartbeat/hb_delnode'))
NAGIOS_PLUGINS_DIR = _define(default='/usr/lib/nagios/plugins')
OCF_ROOT_DIR = _define(autoconf="@OCF_ROOT_DIR@",
                       envvar="OCF_ROOT",
                       setenv=True,
                       default="/usr/lib/ocf")

CRM_VERSION = "%s (Build %s)" % (VERSION, BUILD_VERSION)

