import os
import sys


def _autoconf(var, dflt):
    if var.startswith('@') and var.endswith('@'):
        return dflt
    return var

# Base configuration values
DATADIR = _autoconf("@datadir@", '/usr/share')
PACKAGE = os.path.basename(os.path.dirname(sys.modules[__name__].__file__))
CRM_CACHE_DIR = _autoconf("@CRM_CACHE_DIR@", '/var/cache/crm')

# derived configuration values
CRM_CONFIG_DIR = "@CRM_CONFIG_DIR@"
CRM_DAEMON_DIR = "@CRM_DAEMON_DIR@"
CRM_DAEMON_USER = _autoconf("@CRM_DAEMON_USER@", "hacluster")
VERSION = _autoconf("@VERSION@", "dev")
BUILD_VERSION = _autoconf("@BUILD_VERSION@", "dev")
OCF_ROOT_DIR = _autoconf("@OCF_ROOT_DIR@", "/usr/lib/ocf")

CRM_SCHEMA_DIR = _autoconf("@CRM_DTD_DIRECTORY@", '')
PE_STATE_DIR = '/var/lib/pacemaker/pengine'
CRM_CONFIG_DIR = '/var/lib/pacemaker/cib'
CRM_DAEMON_DIR = os.getenv("CRM_DAEMON_DIR") or '/usr/lib64/pacemaker'
CRM_DAEMON_USER = os.getenv("CRM_DAEMON_USER") or 'hacluster'
CRM_VERSION = "%s (Build %s)" % (VERSION, BUILD_VERSION)
HA_VARLIBHBDIR = '/var/lib/heartbeat'
REPORT_CACHE_DIR = os.path.join(CRM_CACHE_DIR, 'history')
CRM_SHARE_DIR = '/usr/share/crmsh'
TEMPLATES_DIR = os.path.join(CRM_SHARE_DIR, 'templates')
HELP_TEXT_FILE = os.path.join(CRM_SHARE_DIR, 'crm.8.txt')
HB_DELNODE_EXEC = '/usr/share/heartbeat/hb_delnode'
NAGIOS_PLUGINS_DIR = '/usr/lib/nagios/plugins'

OCF_ROOT_DIR = os.getenv("OCF_ROOT")
if not OCF_ROOT_DIR:
    OCF_ROOT_DIR = _autoconf("@OCF_ROOT_DIR@", "/usr/lib/ocf")
    os.environ["OCF_ROOT"] = OCF_ROOT_DIR
